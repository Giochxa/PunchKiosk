@{
    ViewData["Title"] = "Punch Kiosk";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        color: #000;
        overflow: hidden;
    }

    .dark-mode {
        background-color: #121212;
        color: #f0f0f0;
    }

    main {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        max-width: 100vw;
        margin: auto;
        padding: 1vh 2vw;
        box-sizing: border-box;
    }

    #video, #snapshot {
        width: 80vw;
        max-width: 400px;
        aspect-ratio: 4 / 3;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #888;
        background: black;
    }

    #snapshot {
        display: none;
    }

    #dateTime {
        font-family: monospace;
        font-size: clamp(1.2rem, 2.5vw, 2rem);
        font-weight: bold;
        white-space: nowrap;
        text-align: center;
    }

    #numInput {
        font-size: clamp(1.4rem, 2vw, 1.8rem);
        text-align: center;
        padding: 0.5rem;
        border-radius: 8px;
        border: 2px solid #888;
        background-color: #fff;
        width: 80vw;
        max-width: 400px;
    }

    .dark-mode #numInput {
        background-color: #333;
        color: #fff;
        border-color: #666;
    }

    #message {
    font-size: clamp(1.3rem, 2vw, 2rem); /* larger font size */
    text-align: center;
    min-height: 1.4em;
    font-weight: bold;
    margin-top: 1vh;
}


    #numpad {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.6vh;
        width: 80vw;
        max-width: 400px;
    }

    #numpad button {
        font-size: clamp(1rem, 2vw, 1.2rem);
        padding: 0.7rem 0;
        border-radius: 10px;
        border: 1px solid #888;
        background-color: #ddd;
    }

    #submitPunch {
        font-size: clamp(1.1rem, 2vw, 1.3rem);
        padding: 0.8rem;
        background-color: #0d6efd;
        color: white;
        border: none;
        border-radius: 10px;
        width: 80vw;
        max-width: 400px;
    }

    .dark-mode #submitPunch {
        background-color: #0a58ca;
    }

    /* ✅ Kiosk optimization for 800x1280 resolution */
    @@media (min-width: 800px) and (max-width: 800px) and (min-height: 1280px) and (max-height: 1280px) {
        #video {
            width: 100%;
            max-width: none;
            height: auto;
        }

        #dateTime {
            font-size: 2rem;
        }

        #numInput {
            font-size: 1.8rem;
            padding: 0.8rem;
        }

        #numpad button {
            font-size: 1.4rem;
            padding: 1.1rem 0;
        }

        #submitPunch {
            font-size: 1.5rem;
            padding: 1rem;
        }

        main {
            gap: 1vh;
            padding: 1vh 3vw;
        }
    }
</style>

<main>
    <video id="video" autoplay></video>
    <img id="snapshot" alt="Captured snapshot" />
    <div id="dateTime"></div>
    <input id="numInput" type="text" readonly />
    <div id="message"></div>

    <div id="numpad">
        <button class="num-btn">1</button>
        <button class="num-btn">2</button>
        <button class="num-btn">3</button>
        <button class="num-btn">4</button>
        <button class="num-btn">5</button>
        <button class="num-btn">6</button>
        <button class="num-btn">7</button>
        <button class="num-btn">8</button>
        <button class="num-btn">9</button>
        <button id="clear-btn">C</button>
        <button class="num-btn">0</button>
        <button id="backspace-btn">←</button>
    </div>

    <button id="submitPunch" disabled>Submit Punch</button>
</main>

<script src="/js/punch.js"></script>
